<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ticket de compra</title>
    <link rel="icon" href="./images/4.webp" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/css/styles-ticket.css" />
  </head>
  <body
    class="container d-flex align-items-center justify-content-center min-vh-100"
  >
    <article class="p-4 rounded shadow w-100" style="max-width: 900px">
      <header class="text-center mb-4" id="datosCompra">
        <div class="row align-items-center ms-4">
          <img
            id="imgLogo"
            class="col-6 col-md-4 mx-auto"
            src="/images/4.webp"
            alt="logo"
            style="max-width: 100px"
          />
          <h2 class="col-12 col-md-8 text-start ps-5">Game Reel</h2>
        </div>
        <ul class="list-unstyled mt-3">
          <li>
            <h3 class="mb-3">Comprobante de pago</h3>
          </li>
          <li>
            <h6>Fecha de compra: <%= venta.FechaVenta %></h6>
          </li>
          <li>
            <h6>ID de compra: <%= venta.id %></h6>
          </li>
          <li>
            <h6>Cliente: <%= venta.usuario %></h6>
          </li>
        </ul>
      </header>
      <section id="detalle-compra">
        <h3 class="text-center mb-4">Detalle de compra</h3>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col">Producto</th>
                <th class="text-center" scope="col">Cantidad</th>
                <th class="text-center" scope="col">Precio Unitario</th>
                <th class="text-center" scope="col">Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% productos.forEach(producto => { %>
              <tr>
                <td><%= producto.nombre %></td>
                <td class="text-center">
                  <%= producto.DetalleVenta.cantidad %>
                </td>
                <td class="text-center">$<%= producto.precio %></td>
                <td class="text-center">
                  $<%= producto.DetalleVenta.subtotal %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </section>
      <footer class="mt-4">
        <div class="row align-items-center mb-4">
          <h4 class="col-6 text-end">Total:</h4>
          <h4 class="col-6 text-start">$<%= venta.total %></h4>
        </div>
        <div class="row">
          <div class="col-6 text-center mb-2">
            <button class="btn btn-secondary venta w-100" id="<%= venta.id %>">
              Descargar Ticket
            </button>
          </div>
          <div class="col-6 text-center">
            <a class="btn btn-secondary w-100" href="/pantalla-productos">
              Volver a Inicio
            </a>
          </div>
        </div>
      </footer>
    </article>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/ticket.js"></script>
  </body>
</html>
